<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/kilrogg_surface_variant"
    app:cardElevation="2dp"
    app:contentPadding="12dp"
    app:strokeColor="@color/kilrogg_outline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTelemetryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:fontFamily="serif"
            android:textColor="?attr/colorOnSurface"
            android:text="--" />

        <TextView
            android:id="@+id/textTelemetryStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:fontFamily="serif"
            android:textColor="?attr/colorOnSurface"
            android:text="@string/telemetry_status_format" />

        <TextView
            android:id="@+id/textTelemetryLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:fontFamily="serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:text="@string/telemetry_eye_status_format" />

        <TextView
            android:id="@+id/textTelemetryRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:fontFamily="serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:text="@string/telemetry_eye_status_format" />

        <TextView
            android:id="@+id/textTelemetryBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:fontFamily="serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:text="@string/glasses_battery_format" />

        <TextView
            android:id="@+id/textTelemetrySignal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:fontFamily="serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:text="@string/telemetry_signal_detail" />

        <TextView
            android:id="@+id/textTelemetryRetryCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:fontFamily="serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:text="@string/telemetry_retry_count" />

        <TextView
            android:id="@+id/textTelemetryUpdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:fontFamily="serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:text="@string/telemetry_updated_format" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
